{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["domain/**/*", "application/**/*", "infrastructure/**/*", "utils/**/*"],
  "exclude": ["node_modules"]
}